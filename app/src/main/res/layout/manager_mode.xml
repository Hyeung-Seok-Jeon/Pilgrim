<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_pictureChoice"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="0.2"
        android:background="@drawable/gallerychoiceimage"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_gallleryUpdate"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="0.2"
        android:background="@drawable/galleryuploadimage"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_manger_noti"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="0.2"
        android:background="@drawable/notiregisterimage"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_survey_make"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="0.2"
        android:background="@drawable/surveyregisterimage"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_p_result"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_weight="0.2"
        android:background="@drawable/surveyresult"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

</LinearLayout>