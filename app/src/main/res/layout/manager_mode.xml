<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_pictureChoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_click"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:text="사진선택" />

    <Button
        android:id="@+id/btn_gallleryUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_click"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:text="사진업로드" />

    <Button
        android:id="@+id/btn_manger_noti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_click"
        android:text="공지 작성"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_survey_make"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_click"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:text="설문조사 작성" />

    <Button
        android:id="@+id/btn_p_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_click"
        android:text="설문조사 결과"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

</LinearLayout>